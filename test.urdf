<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="wesbo">

  <link name="l1">
    <visual>
      <geometry>
        <box size="0.02 0.05 0.02"/>
      </geometry>
    </visual>
  </link>

  <joint name="l1_j1" type="fixed">
    <parent link="l1"/>
    <child link="j1a"/>
    <origin xyz="0.0 0.025 0.0"/>
  </joint>

  <link name="j1a">
    <visual>
      <geometry>
        <cylinder radius="0.01" length="0.02"/>
      </geometry>
      </visual>
    </link>

    <joint name="j1" type="continuous">
      <parent link="j1a"/>
      <child link="j1b"/>
      <origin xyz="0.0 0.0 0.0"/>
    <axis xyz="0.0 0.0 1.0"/>
  </joint>

  <link name="j1b">
    <visual>
      <geometry>
        <cylinder radius="0.01" length="0.02"/>
      </geometry>
    </visual>
  </link>

  <joint name="j1_l2" type="fixed">
    <parent link="j1b"/>
    <child link="l2"/>
    <origin xyz="0.0 0.025 0.0"/>
    <axis xyz="0.0 0.0 1.0"/>
  </joint>

  <link name="l2">
    <visual>
      <geometry>
        <box size="0.02 0.05 0.02"/>
      </geometry>
    </visual>
  </link>


</robot>